{% if settings.hero_newsletter_form_action != blank %}
  {% assign hero_form_action = settings.hero_newsletter_form_action %}
{% else %}
  {% assign hero_form_action = '#' %}
{% endif %}
<form action="{{ hero_form_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" class="input-group">
  <h3>{{ 'general.newsletter_form.hero_text' | t }}</h3>
  <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.hero_newsletter_email' | t }}" name="EMAIL" id="mail" class="email" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off" autocapitalize="off">
  <input type="submit" class="btn action small" name="subscribe" id="subscribe" value="{{ 'general.newsletter_form.hero_submit' | t }}">
</form>